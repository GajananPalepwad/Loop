<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_background"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    tools:context=".ui.home.loopMeeting.VideoCallScreen">

    <TextView
        android:id="@+id/tvSwipeLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Swip For More"
        android:textStyle="bold"
        android:visibility="gone"
        android:layout_marginVertical="5dp"
        android:textColor="@color/white"
        app:drawableStartCompat="@drawable/ic_right_arrow"
        app:drawableEndCompat="@drawable/ic_right_arrow" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvParticipants"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">


        <ImageView
            android:id="@+id/btnWebcam"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:contentDescription="end the call"
            android:padding="12dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/ic_cam_off"/>

        <ImageView
            android:id="@+id/btnMic"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:padding="12dp"
            android:background="@drawable/button_shape"
            android:src="@drawable/ic_mic_off" />

        <ImageView
            android:id="@+id/btnLeave"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="16dp"
            android:padding="12dp"
            android:backgroundTint="@color/md_red_500"
            android:background="@drawable/button_shape"
            android:src="@drawable/ic_end_call" />


    </LinearLayout>

</LinearLayout>
